{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["cypress", "vite/client"],
    "target": "ESNext",
    "lib": ["ESNext", "DOM"], // ðŸ”§ TU jest zmiana
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "__tests__/**/*.ts",
    "__tests__/**/*.cy.ts"
  ]
}
